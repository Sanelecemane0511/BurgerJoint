@model BurgerJoint.Models.Burger
@{
    ViewData["Title"] = "Edit Burger";
    Layout = "_AdminLayout";
}
<h2>Edit Burger</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ingredients" class="form-label"></label>
        <input asp-for="Ingredients" class="form-control" />
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>

    <!--  IMAGE UPLOADER  -->
    <div class="mb-3">
        <label>Current Image</label>
        @if (!string.IsNullOrEmpty(Model.ImageFileName))
        {
            <div class="my-2">
                <img src="~/img/burgers/@Model.ImageFileName" width="120" class="rounded border" alt="current">
            </div>
        }
        <label>Replace Image (optional)</label>
        <input type="file" name="imageFile" class="form-control" accept=".jpg,.jpeg,.png,.webp">
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>